---
id: HostEurope
version: "1.0"
type: agreement
context:
  provider: Host Europe
  consumer: Consumer
  validity:
    timeZone: Europe/Madrid
    initial: '2016-07-13T00:00:00.000Z'
  definitions:
    schemas:
      Compensation:
        description: Percentage to be deduced from monthly bill
        type: integer
        minimum: 0
        maximum: 100
        unit: '%'
    scopes: {}
terms:
  pricing:
    billing:
      period: monthly
      initial: '2016-05-12T10:35:36.000Z'
      penalties:
        - over:
            Compensation:
              $ref: '#/context/definitions/schemas/Compensation'
  metrics:
    Availability:
      schema:
        description: Availability of service
        type: double
        minimum: 0.0
        maximum: 100.0
        unit: '%'
      computer: >-
        http://HostEurope/Availability/
  guarantees:
    - id: Hosting
      scope: {}
      of:
        - objective: 'Availability == 99.9'
          with:
            Availability: {}
          window:
            type: static
            period: monthly
            initial: '2016-07-13T00:00:00.000Z'
          scope: {}
          penalties:
            - over:
                Compensation:
                  $ref: '#/context/definitions/schemas/Compensation'
              of:
                - value: '-10'
                  condition: 'Availability >= 98 && Availability <= 99.8'
                - value: '-25'
                  condition: 'Availability >= 95 && Availability <= 97.9'
                - value: '-50'
                  condition: 'Availability >= 90 && Availability <= 94.9'
                - value: '-100'
                  condition: 'Availability <= 89.9'  
              upTo: -100